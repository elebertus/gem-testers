!!! XML
!!! Strict
%html
  %head
    %title
      Gem Testers
    = stylesheet_link_tag 'jquery-ui-1.8.6.custom'
    = stylesheet_link_tag 'base'
    = stylesheet_link_tag 'gem_search'
    = yield :stylesheets

    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js'
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.6/jquery-ui.min.js'
    = javascript_include_tag 'application'
    = javascript_include_tag 'gem_search'
    = yield :javascripts
    = yield :feeds
    = csrf_meta_tag

  %body
    #wrapper
      #topnav
        %a.logo{:href => root_path, :title => 'Gem Testers - tests run everywhere, collected here.'}
        #gem-search
          %form{:onsubmit => "return false;"}
            #search-icon
              %img{:src => "/images/search.png"}
            %input#rubygems
          %a.find_gem{:href => browse_gems_url } Browse Gems
          %a.find_gem{:href => browse_authors_url } Browse Authors
        %div.clear

      #content
        .flash=flash[:notice]
        = yield
